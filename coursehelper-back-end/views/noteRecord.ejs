<!DOCTYPE html>
<html>
<head>	
	<title>NoteRecord</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
	<link rel="stylesheet" href="stylesheets/redactorstyle.css" >	
	<link rel="stylesheet" href="stylesheets/redactor.css" >

	<link rel="stylesheet" href="stylesheets/bootstrap.min.css" >	
</head>
<body>
	<form class="form-horizontal" role="form" style="padding-right:15px">
      <div class="form-group iframe-noright">
        <label class="col-xs-offset-1 col-xs-1 control-label">关于</label>
        <div class="col-xs-9">
          <p class="form-control-static" id="usrSelection">本页pdf</p>
        </div>
      </div>
      <div class="form-group iframe-noright">
        <label for="title" class="col-xs-offset-1 col-xs-1 control-label">标题</label>
        <div class="col-xs-9">
          <input type="text" class="form-control" id="noteTitle" placeholder="标题">
        </div>
      </div>
      <div class="form-group iframe-noright">
        <label class="col-xs-offset-1 col-xs-1 control-label">类型</label>
        <div class="col-xs-9">    
            <label class="radio-inline">
              <input type="radio" name="noteType" id="isNote" value="0" checked>笔记
            </label>
            <label class="radio-inline">
              <input type="radio" name="noteType" id="isQuestion" value="1">问题
            </label>
        </div>
      </div>
    </form>

	<div id="bigPage">
		<textarea id="redactor_content" name="content" style="height: 275px;"><p>写点什么吧...</p></textarea>
	</div>

	<button type="button" class="btn btn-primary btn-block" id="noteSubmit"><span class="glyphicon glyphicon-cloud-upload"></span> 发布</button>

	<!-- Modal -->
	<div class="modal fade" id="myModalSuccess" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h4 class="modal-title text-success" id="mySuccessLabel" >Success</h4>
	      </div>
	      <div class="modal-body" id="mySuccessBody">
	        
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-primary" id="mySuccessYes">确认</button>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->

	<!-- Modal -->
	<div class="modal fade" id="myModalError" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	      	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title text-danger" id="myErrorLabel">Error</h4>
	      </div>
	      <div class="modal-body" id="myErrorBody">
	        
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->

	<script type="text/javascript" src="javascripts/jquery-1.7.min.js"></script>
	<script type="text/javascript" src="javascripts/redactor.js"></script>
	<script type="text/javascript" src="javascripts/noteRecord.js"></script>
	<script type="text/javascript" src="javascripts/BS_API.js"></script>
	<script type="text/javascript" src="javascripts/bootstrap.min.js"></script>
</body>
</html>